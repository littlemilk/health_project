<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.bunk.dao.CheckGroupDao">
    <resultMap id="baseResultMap" type="cn.bunk.pojo.CheckGroup">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
    </resultMap>
    
    <resultMap id="findByIdResultMap" type="cn.bunk.pojo.CheckGroup" extends="baseResultMap">
        <collection property="checkItems"
                    ofType="cn.bunk.pojo.CheckItem"
                    select="cn.bunk.dao.CheckItemDao.findCheckItemById"
                    column="id"></collection>
    </resultMap>

    <select id="findPage" parameterType="string" resultType="cn.bunk.pojo.CheckGroup">
        select * from t_checkgroup
        <if test="value != null and value != '' and value.length > 0">
            where code = #{value} or name = #{value} or helpCode = #{value}
        </if>
    </select>

    <insert id="add" parameterType="cn.bunk.pojo.CheckGroup">
        <!--通过mybatis框架提供的selectKey标签获得自增产生的ID值-->
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>
        insert into t_checkgroup(code,name,sex,helpCode,remark,attention)
        values
        (#{code},#{name},#{sex},#{helpCode},#{remark},#{attention})
    </insert>

    <insert id="setCheckGroupAndCheckItem" parameterType="map">
        insert into t_checkgroup_checkitem(checkgroup_id,checkitem_id)
        values
        (#{checkgroupId},#{checkitemId})
    </insert>

    <select id="findCheckItemIdByCheckGroupId" parameterType="int" resultType="int">
        select checkitem_id from t_checkgroup_checkitem where checkgroup_id = #{id}
    </select>

    <select id="findById" parameterType="int" resultType="cn.bunk.pojo.CheckGroup">
        select * from t_checkgroup where id = #{id}
    </select>

    <update id="edit" parameterType="cn.bunk.pojo.CheckGroup">
        update t_checkgroup
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteCheckItemByCheckGroupId" parameterType="int">
        delete from t_checkgroup_checkitem where checkgroup_id = #{id}
    </delete>

    <delete id="delete" parameterType="int">
        delete from t_checkgroup where id = #{id}
    </delete>

    <select id="findAll" resultType="cn.bunk.pojo.CheckGroup">
        select * from t_checkgroup
    </select>
    
    <select id="findCheckGroupById" parameterType="int" resultMap="findByIdResultMap">
        select * from t_checkgroup where id in (select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{setmeal_id})
    </select>
</mapper>
